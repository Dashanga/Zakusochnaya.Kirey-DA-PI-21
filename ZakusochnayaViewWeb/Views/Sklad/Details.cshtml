@model ZakusochnayaServiceDAL.ViewModel.SkladViewModel

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
	<h4>SkladViewModel</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.SkladName)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.SkladName)
		</dd>

	</dl>
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.SkladElements[0].ElementName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SkladElements[0].Number)
			</th>
		</tr>

		@foreach (var item in Model.SkladElements)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ElementName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Number)
				</td>
				<td></td>
			</tr>
		}

	</table>
</div>
<p>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
	@Html.ActionLink("Back to List", "List")
</p>